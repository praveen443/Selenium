<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross-Browser Testing" parallel="tests">

  <!-- Test app in Firefox driver -->
  <test name="Test app in Firefox browser">
  <parameter name="browserType" value="firefox"/>
  <parameter name="appURL" value="URL"/>
    <groups>
       <run>
          <include name="Regression Tests"/>
       </run>
    </groups>
   	<classes>
   		<class name="parallelTesting.crossBrowserTesting"/>
   	</classes>
  </test> <!-- Test -->
  
  <!-- Test app in Chrome driver -->
  <test name="Test app in Chrome browser">
  <parameter name="browserType" value="chrome"/>
  <parameter name="appURL" value="URL"/>
   <groups>
       <run>
          <include name="Regression Tests"/>
       </run>
    </groups>
   	<classes>
   		<class name="parallelTesting.crossBrowserTesting"/>
   	</classes>
  </test> <!-- Test -->
  
  <!-- Test app in IE browser -->
  <test name="Test app in IE browser">
  <parameter name="browserType" value="iexplorer"/>
  <parameter name="appURL" value="URL"/>
   	<groups>
       <run>
          <include name="Regression Tests"/>
       </run>
    </groups>
   	<classes>
   		<class name="parallelTesting.crossBrowserTesting"/>
   	</classes>
  </test> <!-- Test --> 
  
</suite> <!-- Suite -->
